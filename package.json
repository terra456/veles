{
  "name": "veles-fullstack",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "install:all": "npm install && cd frontend && npm install",
    "postinstall": "npm run prepare",
    "dev": "cd frontend && npm run dev",
    "build": "cd frontend && npm run build",
    "preview": "npm run build && node server.js",
    "start": "node server.js",
    "dev:full": "concurrently \"cd frontend && npm run dev\" \"nodemon server.js\"",
    "lint": "npm run lint:biome && npm run lint:styles",
    "lint:biome": "biome lint .",
    "lint:styles": "stylelint \"**/*.{scss,sass}\" --ignore-path .gitignore",
    "fix": "npm run fix:biome && npm run fix:styles",
    "fix:biome": "biome check --fix .",
    "fix:styles": "stylelint --fix \"**/*.{scss,sass}\" --ignore-path .gitignore",
    "format": "biome format --write .",
    "prepare": "husky install",
    "ci": "biome ci .",
    "deploy": "npm run install:all && npm run build"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,vue,mjs,cjs}": [
      "biome check --write"
    ],
    "*.{json,md,html,css,scss,sass}": [
      "biome format --write"
    ],
    "*.{scss,sass}": [
      "stylelint --fix",
      "prettier --write"
    ]
  },
  "dependencies": {
    "compression": "^1.7.4",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "morgan": "^1.10.0",
    "nodemailer": "^7.0.12"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "concurrently": "^8.2.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "nodemon": "^3.0.1",
    "prettier": "^3.7.3",
    "stylelint": "^16.26.1",
    "stylelint-config-standard-scss": "^16.0.0",
    "stylelint-order": "^7.0.0",
    "stylelint-scss": "^6.13.0"
  }
}
