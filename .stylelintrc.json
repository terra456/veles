{
  "extends": "stylelint-config-standard-scss",
  "ignoreFiles": ["public/**", "public/**/*.*"],
  "rules": {
    "selector-class-pattern": null,
    "scss/dollar-variable-pattern": null,
    "font-family-no-missing-generic-family-keyword": null,
    "scss/at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "use",
          "forward",
          "mixin",
          "include",
          "function",
          "return",
          "if",
          "else",
          "each",
          "for"
        ]
      }
    ]
  }
}
